<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ManagerController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sort" GridPane.rowIndex="2" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Profile" />
                  <TextField fx:id="profileFilterInput" promptText="filter" GridPane.columnIndex="2" GridPane.rowIndex="2" visible="false" />
                  <ChoiceBox fx:id="profileChoiceBox" onAction="#selectProfile" prefWidth="150.0" GridPane.columnIndex="1" />
                  <ChoiceBox fx:id="orderChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#orderSaves" />
                  <Button mnemonicParsing="false" onAction="#openProfileWindow" text="Edit profiles" GridPane.columnIndex="2" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Save Slot" GridPane.rowIndex="1" />
                  <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="saveSlotChoiceBox" onAction="#selectSaveSlot"/>
               </children>
            </GridPane>
            <ListView fx:id="saveListView" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#importSave" text="Import">
            </Button>
            <Button mnemonicParsing="false" text="Replace" onAction="#replaceSave">
            </Button>
            <Button mnemonicParsing="false" text="Load" onAction="#loadSave">
            </Button>
            <Button mnemonicParsing="false" text="Rename" onAction="#openSaveNameChangeDialog">
            </Button>
            <Button mnemonicParsing="false" text="Delete" onAction="#deleteSave">
            </Button>
<!--            <Button mnemonicParsing="false" text="Settings" />-->
         </children>
      </HBox>
   </bottom>
   <top>
      <Pane prefHeight="41.0" prefWidth="322.0" BorderPane.alignment="CENTER" visible="false">
         <children>
            <Text layoutX="150.0" layoutY="19.0" strokeType="OUTSIDE" strokeWidth="0.0" text="HEader" />
         </children>
      </Pane>
   </top>
</BorderPane>
