<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?scenebuilder-stylesheet /application.css?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ProfileController">
   <children>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Save location" />
            <HBox>
               <children>
                  <TextField fx:id="saveLocationInput" disable="true"/>
                  <Button onAction="#openSaveDirectoryChooser" mnemonicParsing="false" text="Browse" />
               </children>
            </HBox>
            <Text  strokeType="OUTSIDE" strokeWidth="0.0" text="Profiles directory" />
            <HBox>
               <children>
                  <TextField fx:id="profileLocationInput" disable="true"/>
                  <Button onAction="#openProfileDirectoryChooser" mnemonicParsing="false" text="Browse" />
               </children>
            </HBox>
            <Separator/>
            <Pane fx:id="profileListPane">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
               <HBox>
                  <children>
                     <ListView fx:id="profileList" />
                     <VBox styleClass="profileListButtonBox">
                        <children>
                           <Button onAction="#newProfile" mnemonicParsing="false" text="New" />
                           <Button onAction="#editProfile" mnemonicParsing="false" text="Edit" />
                           <Button onAction="#deleteProfile" mnemonicParsing="false" text="Delete" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
            </Pane>
            <Separator/>
            <VBox visible="false" fx:id="editProfileBox">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Profile Name" />
                  <TextField fx:id="profileNameInput" />
                  <HBox>
                     <children>
                        <Button mnemonicParsing="false" text="Accept" onAction="#saveProfile"/>
                        <Button mnemonicParsing="false" text="Cancel" onAction="#closeProfileNameMenu"/>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
